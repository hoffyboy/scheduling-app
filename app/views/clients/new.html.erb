<div class="row">
  <div class="col-md-8">

    <%= form_for @client, url: {action: :create} do |f| %>
      <% if @client.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@client.errors.count, "error") %>.</h4>
          <ul>
            <% @client.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h2 class="form-label">Contact information:</h2>
      <div class="row">
        <div class="form-group col-sm-4">
          <%= f.label :first_name, class: 'form-label' %>
          <%= f.text_field :first_name, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-4">
          <%= f.label :last_name, class: 'form-label' %>
          <%= f.text_field :last_name, class: 'form-control' %>
        </div>
      </div>
      <div class="row">
        <div class="form-group col-sm-4">
          <%= f.label :email, class: 'form-label' %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>
        <div class="form-group col-sm-4">
          <%= f.label :phone, class: 'form-label' %>
          <%= f.text_field :phone, class: 'form-control', placeholder: "XXX-XXX-XXXX" %>
        </div>
      </div>
      <br>
      <h2 class="form-label">Choose from our collection:</h2>
        <div class="row">
          <div class="form-group col-sm-4">
            <%= f.label :Primary_choice, class: 'form-label' %>
            <%= f.text_field :primary, class: 'form-control' %>
          </div>
          <div class="form-group col-sm-4">
            <%= f.label :Secondary_choice, class: 'form-label' %>
            <%= f.text_field :secondary, class: 'form-control' %>
          </div>
        </div>
        <br>
      <div class="form-group">
        <%= f.submit "Complete", class: "btn btn-success form-btn col-sm-8" %>
      </div>
    <% end %>
  </div>
</div>
