
<h3>Preferred Tour Date</h3>
<br>
<% if !params[:date] %>
  <% @available_days.each do |i| %>
    <%= link_to "#{i.strftime('%a, %b %d')}", events_path(date: i), method: :get, class: 'btn btn-primary' %>
    <br />
    <br />
  <% end %>
<% end %>

<% if params[:date] %>
  <% @available_times.each do |i| %>
    <%= link_to "#{i.to_time.strftime("%I:%M %p")}", new_client_path(time: i.to_time), method: :get, class: 'btn btn-primary' %>
    <br />
    <br />
  <% end %>
<% end %>
